{% extends 'layouts/layout.html.twig' %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Cadastrar post</h1>
            <form name="form" method="post" action="/admin/posts/create">
                <div class="form-group {{ (fieldsError is defined and 'title' in fieldsError) ? 'has-error' }}">
                    <label class="control-label" for="title">Título</label>
                    <input class="form-control" id="title" type="text" name="title" value="{{ post.title }}" />
                </div>
                <div class="form-group {{ (fieldsError is defined and 'content' in fieldsError) ? 'has-error' }}">
                    <label class="control-label" for="content">Conteúdo</label>
                    <textarea class="form-control" id="content" name="content">{{ post.content }}</textarea>
                </div>
                <button type="submit" class="btn btn-default">
                    Criar post
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}